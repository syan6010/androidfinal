            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lisName"
            app:layout_constraintStart_toStartOf="@+id/lisNo" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/lisNo"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lisAge"
            app:layout_constraintStart_toStartOf="@+id/lisName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lisName"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/lisTel"
            app:layout_constraintTop_toTopOf="@+id/lisAge" app:layout_constraintStart_toStartOf="@+id/lisAge"
            android:layout_marginTop="31dp" app:layout_constraintBottom_toBottomOf="@+id/lisGen"
            android:layout_marginBottom="25dp"/>
    <TextView
            android:text="GENDER:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/textView8"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lisGen"
            app:layout_constraintTop_toTopOf="@+id/textView13" app:layout_constraintStart_toStartOf="@+id/lisTel"/>
</android.support.constraint.ConstraintLayout>